    <DataConnection Name="OperationDeleteSetDataConnection" Type="SetDataConnection" Assembly="DataConnections">
      <Workflow Name="Template" />
      <SqlQueries>
        <SqlQuery Name="OperationDeleteSqlQuery" Type="Delete" />
      </SqlQueries>
      <Parameters>
        <Parameter NativeName="OperationId">
          <Value>
            <Object Name="OperationDatabaseTable">
              <Property Name="SelectedRowCellValueByColumnName">
                <Parameters>
                  <Parameter Name="ColumnName">OperationId</Parameter>
                </Parameters>
              </Property>
            </Object>
          </Value>
        </Parameter>
      </Parameters>
