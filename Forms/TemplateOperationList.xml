  <Conditions>
    <Condition Name="FormLoadedCondition" Type="FormLoadedCondition" Assembly="Conditions" />

    <Condition Name="FormClosingCondition" Type="FormClosingCondition" Assembly="Conditions" />

    <Condition Name="EscapeKeyDownCondition" Type="KeyDownCondition" Assembly="Conditions">
      <Key Value="Escape" />
    </Condition>

    <Condition Name="F5KeyDownCondition" Type="KeyDownCondition" Assembly="Conditions">
      <Key Value="F5" />
    </Condition>

    <Condition Name="OperationSelectedCondition" Type="GreaterCondition" Assembly="Conditions">
      <Items>
        <Item>
          <Object Name="OperationDatabaseTable">
            <Property Name="SelectedRowsCount" />
          </Object>
        </Item>
        <Item>0</Item>
      </Items>
      <DataType Type="IntegerDataType" />
    </Condition>

    <Condition Name="SelectedOperationIsArchiveCondition" Type="EqualCondition" Assembly="Conditions">
      <Items>
        <Item>
          <Object Name="OperationDatabaseTable">
            <Property Name="SelectedRowCellValueByColumnName">
              <Parameters>
                <Parameter Name="ColumnName">Archive</Parameter>
              </Parameters>
            </Property>
          </Object>
        </Item>
        <Item>True</Item>
      </Items>
      <DataType Type="BooleanDataType" />
    </Condition>

    <Condition Name="OperationCellDoubleClickCondition" Type="CellDoubleClickCondition" Assembly="Conditions">
      <Table Name="OperationDatabaseTable" />
    </Condition>

    <Condition Name="OperationAddFormUpdatedTrueEqualCondition" Type="EqualCondition" Assembly="Conditions">
      <AlwaysChange Value="True" />
      <Items>
        <Item>
          <Command Name="OperationAddFormShowCommand" Parameter="Updated" />
        </Item>
        <Item>True</Item>
      </Items>
      <DataType Type="BooleanDataType" />
    </Condition>

    <Condition Name="OperationEditFormUpdatedTrueEqualCondition" Type="EqualCondition" Assembly="Conditions">
      <AlwaysChange Value="True" />
      <Items>
        <Item>
          <Command Name="OperationEditFormShowCommand" Parameter="Updated" />
        </Item>
        <Item>True</Item>
      </Items>
      <DataType Type="BooleanDataType" />
    </Condition>

    <Condition Name="SelectedOperationIsNotSystemEqualCondition" Type="EqualCondition" Assembly="Conditions">
      <Items>
        <Item>
          <Object Name="OperationDatabaseTable">
            <Property Name="SelectedRowCellValueByColumnName">
              <Parameters>
                <Parameter Name="ColumnName">System</Parameter>
              </Parameters>
            </Property>
          </Object>
        </Item>
        <Item>False</Item>
      </Items>
    </Condition>

    <Condition Name="SelectedOperationIdGreaterCondition" Type="GreaterCondition" Assembly="Conditions">
      <Items>
        <Item>
          <Object Name="OperationDatabaseTable">
            <Property Name="SelectedRowCellValueByColumnName">
              <Parameters>
                <Parameter Name="ColumnName">OperationId</Parameter>
              </Parameters>
            </Property>
          </Object>
        </Item>
        <Item>0</Item>
      </Items>
      <DataType Type="IntegerDataType" />
    </Condition>

    <Condition Name="OperationCellClickCondition" Type="CellClickCondition" Assembly="Conditions">
      <Table Name="OperationDatabaseTable" />
    </Condition>

    <Condition Name="OperationLastCellClickedColumnNameStateEqualCondition" Type="EqualCondition" Assembly="Conditions">
      <Items>
        <Item>
          <Object Name="OperationDatabaseTable">
            <Property Name="LastCellClickedColumnName" />
          </Object>
        </Item>
        <Item>State</Item>
      </Items>
    </Condition>

    <Condition Name="SelectedOperationHasChildEqualCondition" Type="EqualCondition" Assembly="Conditions">
      <Items>
        <Item>
          <Object Name="OperationDatabaseTable">
            <Property Name="SelectedRowCellValueByColumnName">
              <Parameters>
                <Parameter Name="ColumnName">HasChildren</Parameter>
              </Parameters>
            </Property>
          </Object>
        </Item>
        <Item>True</Item>
      </Items>
    </Condition>

    <Condition Name="OperationToggleFoldingNodeNestedCondition" Type="NestedCondition" Assembly="Conditions">
      <AlwaysChange Value="True" />
      <ConditionExpression>
        <And>
          <Condition Name="OperationCellClickCondition" />
          <Condition Name="OperationLastCellClickedColumnNameStateEqualCondition" />
          <Condition Name="SelectedOperationHasChildEqualCondition" />
        </And>
      </ConditionExpression>
    </Condition>

    <Condition Name="OperationDeleteResultIsNullCondition" Type="IsNullCondition" Assembly="Conditions">
      <Items>
        <Item>
          <Command Name="OperationDeleteSaveCommand" />
        </Item>
      </Items>
    </Condition>

    <Condition Name="OperationDeleteResultEqualParentCondition" Type="EqualCondition" Assembly="Conditions">
      <Items>
        <Item>
          <Command Name="OperationDeleteSaveCommand" />
        </Item>
        <Item>parent</Item>
      </Items>
      <DataType Type="StringDataType" />
    </Condition>

    <Condition Name="OperationDeleteResultEqualUsedCondition" Type="EqualCondition" Assembly="Conditions">
      <Items>
        <Item>
          <Command Name="OperationDeleteSaveCommand" />
        </Item>
        <Item>used</Item>
      </Items>
      <DataType Type="StringDataType" />
    </Condition>
  </Conditions>

  <Commands>
    <Command Name="FormCloseCommand" Type="FormCloseCommand" Assembly="Commands" />

    <Command Name="UpdatedTrueValueSetCommand" Type="ValueSetCommand" Assembly="Commands">
      <Parameter Name="Updated">True</Parameter>
    </Command>

    <Command Name="OperationDataConnectionRefreshCommand" Type="DataConnectionRefreshCommand" Assembly="Commands">
      <DataConnections>
        <DataConnection Name="OperationPrimaryGetDataConnection" />
      </DataConnections>
    </Command>

    <Command Name="OperationAddFormShowCommand" Type="FormShowCommand" Assembly="Commands">
      <Xml Type="Path">TemplateOperationEdit.xml</Xml>
      <Show Type="None" />
      <Multiple Allow="True" />
      <Parameters>
        <Parameter Name="OperationCategoryId">
          <Object Name="OperationDatabaseTable">
            <Property Name="SelectedRowCellValueByColumnName">
              <Parameters>
                <Parameter Name="ColumnName">OperationId</Parameter>
              </Parameters>
            </Property>
          </Object>
        </Parameter>
      </Parameters>
    </Command>

    <Command Name="OperationEditFormShowCommand" Type="FormShowCommand" Assembly="Commands">
      <Xml Type="Path">TemplateOperationEdit.xml</Xml>
      <Show Type="None" />
      <Parameters>
        <Parameter Name="Edit">True</Parameter>
        <Parameter Name="OperationId">
          <Object Name="OperationDatabaseTable">
            <Property Name="SelectedRowCellValueByColumnName">
              <Parameters>
                <Parameter Name="ColumnName">OperationId</Parameter>
              </Parameters>
            </Property>
          </Object>
        </Parameter>
      </Parameters>
    </Command>

    <Command Name="OperationArchiveSaveCommand" Type="SaveCommand" Assembly="Commands">
      <DataConnections>
        <DataConnection Name="OperationArchiveSetDataConnection" />
      </DataConnections>
    </Command>

    <Command Name="OperationDeleteSaveCommand" Type="SaveCommand" Assembly="Commands">
      <DataConnections>
        <DataConnection Name="OperationDeleteSetDataConnection" />
      </DataConnections>
    </Command>

    <Command Name="OperationDeleteMessageBoxCommand" Type="MessageBoxCommand" Assembly="Commands">
      <Caption>Удаление</Caption>
      <Text>Вы действительно хотите удалить выбранную запись?</Text>
      <Buttons Type="YesNo" />
      <Icon Type="Question" />
    </Command>

    <Command Name="OperationTryDeleteUsedMessageBoxCommand" Type="MessageBoxCommand" Assembly="Commands">
      <Caption>Удаление</Caption>
      <Text>Невозможно удалить запись, так как она используется в программе.\rЗапись перемещена в архив.</Text>
      <Icon Type="Information" />
      <Buttons Type="Ok" />
    </Command>

    <Command Name="OperationHasChildrenWarningMessageBoxCommand" Type="MessageBoxCommand" Assembly="Commands">
      <Caption>Удаление</Caption>
      <Text>Выбранное назначение платежа содержит дочерние элементы и не может быть удалено.</Text>
      <Icon Type="Information" />
      <Buttons Type="Ok" />
    </Command>

    <Command Name="OperationArchiveMessageBoxCommand" Type="MessageBoxCommand" Assembly="Commands">
      <Caption>Архив</Caption>
      <Text>
        <Switch>
          <Case>
            <When>
              <Condition Name="SelectedOperationIsArchiveCondition" />
            </When>
            <Then>Вы действительно хотите восстановить выбранную запись из архива?</Then>
          </Case>
          <Case>Вы действительно хотите перенести выбранную запись в архив?</Case>
        </Switch>
      </Text>
      <Buttons Type="YesNo" />
      <Icon Type="Question" />
    </Command>

    <Command Name="EditingArchiveOperationMessageBoxCommand" Type="MessageBoxCommand" Assembly="Commands">
      <Caption />
      <Text>Для редактирования восстановите запись из архива.</Text>
      <Icon Type="Warning" />
      <Buttons Type="Ok" />
    </Command>

    <Command Name="OperationSelectInTableValueSetCommand" Type="ValueSetCommand" Assembly="Commands">
      <Object Name="OperationDatabaseTable">
        <Property Name="SelectRowByFieldValue">
          <Parameters>
            <Parameter Name="ColumnName">OperationId</Parameter>
            <Parameter Name="Value">
              <Input />
            </Parameter>
          </Parameters>
        </Property>
      </Object>
    </Command>

    <Command Name="OperationToggleFoldingNodeValueSetCommand" Type="ValueSetCommand" Assembly="Commands">
      <DataConnection Name="OperationTreeGetDataConnection">
        <Property Name="ToggleFoldingNode">
          <Parameters>
            <Parameter Name="NodeId">
              <Object Name="OperationDatabaseTable">
                <Property Name="SelectedRowCellValueByColumnName">
                  <Parameters>
                    <Parameter Name="ColumnName">OperationId</Parameter>
                  </Parameters>
                </Property>
              </Object>
            </Parameter>
          </Parameters>
        </Property>
      </DataConnection>
    </Command>

    <Command Name="BlockRefreshVariableValueSetCommand" Type="ValueSetCommand" Assembly="Commands">
      <Object Name="BlockRefreshVariable">
        <Input />
      </Object>
    </Command>

    <Command Name="OperationTreeDataConnectionRefreshCommand" Type="DataConnectionRefreshCommand" Assembly="Commands">
      <DataConnections>
        <DataConnection Name="OperationTreeGetDataConnection" Packet="True" />
      </DataConnections>
    </Command>
  </Commands>

  <Executions>
    <Execution>
      <ConditionExpression>
        <Or>
          <Condition Name="FormClosingCondition" />
          <Condition Name="EscapeKeyDownCondition" />
        </Or>
      </ConditionExpression>
      <Commands>
        <Command Name="FormCloseCommand" />
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Condition Name="OperationAddFormUpdatedTrueEqualCondition" />
      </ConditionExpression>
      <Commands>
        <Command Name="OperationDataConnectionRefreshCommand" />
        <Command Name="OperationSelectInTableValueSetCommand">
          <Command Name="OperationAddFormShowCommand" Parameter="OperationId" />
        </Command>
        <Command Name="UpdatedTrueValueSetCommand" />
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Condition Name="OperationEditFormUpdatedTrueEqualCondition" />
      </ConditionExpression>
      <Commands>
        <Command Name="OperationDataConnectionRefreshCommand" />
        <Command Name="OperationSelectInTableValueSetCommand">
          <Command Name="OperationEditFormShowCommand" Parameter="OperationId" />
        </Command>
        <Command Name="UpdatedTrueValueSetCommand" />
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Command Name="OperationArchiveMessageBoxCommand" Parameter="Yes" />
      </ConditionExpression>
      <Commands>
        <Command Name="OperationArchiveSaveCommand" />
        <Command Name="OperationDataConnectionRefreshCommand" />
        <Command Name="UpdatedTrueValueSetCommand" />
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Command Name="OperationDeleteMessageBoxCommand" Parameter="Yes" />
      </ConditionExpression>
      <Commands>
        <Command Name="OperationDeleteSaveCommand" />
        <If>
          <When>
            <Condition Name="OperationDeleteResultIsNullCondition" />
          </When>
          <Then>
            <Command Name="UpdatedTrueValueSetCommand" />
          </Then>
          <ElseIf>
            <When>
              <Condition Name="OperationDeleteResultEqualParentCondition" />
            </When>
            <Then>
              <Command Name="OperationHasChildrenWarningMessageBoxCommand" />
            </Then>
          </ElseIf>
          <ElseIf>
            <When>
              <Condition Name="OperationDeleteResultEqualUsedCondition" />
            </When>
            <Then>
              <Command Name="OperationTryDeleteUsedMessageBoxCommand" />
              <Command Name="UpdatedTrueValueSetCommand" />
            </Then>
          </ElseIf>
        </If>
      </Commands>
    </Execution>
    <Execution>
      <ConditionExpression>
        <Condition Name="OperationCellDoubleClickCondition" />
      </ConditionExpression>
      <Commands>
        <If>
          <When>
            <Condition Name="SelectedOperationIsArchiveCondition" />
          </When>
          <Then>
            <Command Name="EditingArchiveOperationMessageBoxCommand" />
          </Then>
          <Else>
            <If>
              <When>
                <Not>
                  <Condition Name="SelectedOperationIsNotSystemEqualCondition" />
                </Not>
              </When>
              <Then>
                <Command Name="OperationEditFormShowCommand" />
              </Then>
            </If>
          </Else>
        </If>
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Condition Name="F5KeyDownCondition" />
      </ConditionExpression>
      <Commands>
        <Command Name="OperationDataConnectionRefreshCommand" />
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Condition Name="OperationToggleFoldingNodeNestedCondition" />
      </ConditionExpression>
      <Commands>
        <If>
          <When>
            <Object Name="BlockRefreshVariable" />
          </When>
          <Then>
            <Command Name="BlockRefreshVariableValueSetCommand">False</Command>
            <Command Name="OperationToggleFoldingNodeValueSetCommand" />
            <Command Name="OperationTreeDataConnectionRefreshCommand" />
            <Command Name="BlockRefreshVariableValueSetCommand">True</Command>
          </Then>
        </If>
      </Commands>
    </Execution>
  </Executions>

