          <Field Name="OperationId" />
          <Field Name="OperationCategoryId" />
          <Field Name="Title" />
          <Field Name="System" />
          <Field Name="Archive" />
        </Fields>
      </SqlQuery>
    </DataConnection>

    <DataConnection Name="OperationArchiveSetDataConnection" Type="SetDataConnection" Assembly="DataConnections">
      <Workflow Name="Template" />
      <SqlQueries>
        <SqlQuery Name="OperationArchiveUpdateSqlQuery" Type="Update" />
      </SqlQueries>
      <Parameters>
        <Parameter NativeName="OperationId">
          <Value>
            <Object Name="OperationDatabaseTable">
              <Property Name="SelectedRowCellValueByColumnName">
                <Parameters>
                  <Parameter Name="ColumnName">OperationId</Parameter>
                </Parameters>
