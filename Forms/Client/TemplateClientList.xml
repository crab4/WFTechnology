      </DataConnections>
    </Command>

    <Command Name="ClientSelectInTableValueSetCommand" Type="ValueSetCommand" Assembly="Commands">
      <Object Name="ClientDatabaseTable">
        <Property Name="SelectRowByFieldValue">
          <Parameters>
            <Parameter Name="ColumnName">ClientId</Parameter>
            <Parameter Name="Value">
              <Switch>
                <Case>
                  <When>
                    <Parameter Name="SelectionMode" />
                  </When>
                  <Then>
                    <Parameter Name="SelectedClientId" />
                  </Then>
                </Case>
                <Case>
                  <Command Name="ClientEditFormShowCommand" Parameter="ClientId" />
                </Case>
              </Switch>
            </Parameter>
          </Parameters>
        </Property>
      </Object>
    </Command>

    <Command Name="ClientDeleteSaveCommand" Type="SaveCommand" Assembly="Commands">
      <DataConnections>
        <DataConnection Name="ClientDeleteSetDataConnection" />
      </DataConnections>
    </Command>

    <Command Name="ClientDeleteMessageBoxCommand" Type="MessageBoxCommand" Assembly="Commands">
      <Caption>Удаление</Caption>
      <Text>Вы уверены, что хотите удалить этого клиента?</Text>
      <Icon Type="Question" />
      <Buttons Type="YesNo" />
    </Command>

    <Command Name="UpdatedSetTrueValueSetCommand" Type="ValueSetCommand" Assembly="Commands">
      <Parameter Name="Updated">True</Parameter>
    </Command>

    <Command Name="ClientArchiveMessageBoxCommand" Type="MessageBoxCommand" Assembly="Commands">
      <Caption>Архив</Caption>
      <Text>
        <Switch>
          <Case>
            <When>
              <Condition Name="SelectedClientIsArchiveEqualCondition" />
            </When>
            <Then>Вы действительно хотите восстаовить выбранную запись из архива?</Then>
          </Case>
          <Case>Вы действительно хотите переместить выбранную запись в архив</Case>
        </Switch>
      </Text>
      <Icon Type="Question" />
      <Buttons Type="YesNo" />
    </Command>

    <Command Name="ClientCantDeleteMessageBoxCommand" Type="MessageBoxCommand" Assembly="Commands">
      <Caption>Удадение</Caption>
      <Text>Текущая запись защищена связями, невозможно удалить</Text>
      <Icon Type="Asterisk" />
      <Buttons Type="Ok" />
    </Command>

    <Command Name="ClientArchiveToggleSaveCommand" Type="SaveCommand" Assembly="Commands">
      <DataConnections>
        <DataConnection Name="ClientArchiveToggleSetDataConnection" />
      </DataConnections>
    </Command>

    <Command Name="FilterTextBoxValueSetCommand" Type="ValueSetCommand" Assembly="Commands">
      <Object Name="FilterTitleTextBox">
        <Input />
      </Object>
    </Command>

    <Command Name="FilterVarValueSetCommand" Type="ValueSetCommand" Assembly="Commands">
      <Object Name="FilterVariable">
        <Input />
      </Object>
    </Command>


    <Command Name="SelectedClientIdValueSetCommand" Type="ValueSetCommand" Assembly="Commands">
      <Parameter Name="SelectedClientId">
        <Object Name="ClientDatabaseTable">
          <Property Name="SelectedRowCellValueByColumnName">
            <Parameters>
              <Parameter Name="ColumnName">ClientId</Parameter>
            </Parameters>
          </Property>
        </Object>
      </Parameter>
    </Command>

    <Command Name="SelectedArchiveClientMessageBoxCommand" Type="MessageBoxCommand" Assembly="Commands">
      <Caption>Внимание</Caption>
      <Text>Нельзя выбрать запись, находящуюся в архиве</Text>
      <Icon Type="Warning" />
      <Buttons Type="Ok" />
    </Command>

    <Command Name="SelectClientSequentialCommand" Type="SequentialCommand" Assembly="Commands">
      <Commands>
        <If>
          <When>
            <Condition Name="SelectedClientIsArchiveEqualCondition" />
          </When>
          <Then>
            <Command Name="SelectedArchiveClientMessageBoxCommand" />
          </Then>
          <Else>
            <Command Name="SelectedClientIdValueSetCommand" />
            <Command Name="UpdatedSetTrueValueSetCommand" />
            <Command Name="FormCloseCommand" />
          </Else>
        </If>
      </Commands>
    </Command>

  </Commands>

  <Executions>
    <Execution>
      <ConditionExpression>
        <Condition Name="FormLoadedCondition" />
      </ConditionExpression>
      <Commands>
        <Command Name="ClientSelectInTableValueSetCommand">
          <Parameter Name="SelectedClientId" />
        </Command>
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Condition Name="FormClosingCondition" />
      </ConditionExpression>
      <Commands>
        <Command Name="FormCloseCommand" />
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Condition Name="ClientDatabaseTableCellDoubleClickCondition" />
      </ConditionExpression>
      <Commands>
        <If>
          <When>
            <Parameter Name="SelectionMode" />
          </When>
          <Then>
            <Command Name="SelectClientSequentialCommand" />
          </Then>
          <Else>
            <Command Name="ClientEditFormShowCommand">
              <Input Name="Edit">True</Input>
              <Input Name="ClientId">
                <Object Name="ClientDatabaseTable">
                  <Property Name="SelectedRowCellValueByColumnName">
                    <Parameters>
                      <Parameter Name="ColumnName">ClientId</Parameter>
                    </Parameters>
                  </Property>
                </Object>
              </Input>
              <Input Name="Archive">
                <Object Name="ClientDatabaseTable">
                  <Property Name="SelectedRowCellValueByColumnName">
                    <Parameters>
                      <Parameter Name="ColumnName">Archive</Parameter>
                    </Parameters>
                  </Property>
                </Object>
              </Input>
            </Command>
          </Else>
        </If>
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Condition Name="ClientEditUpdateTrueEqualCondition" />
      </ConditionExpression>
      <Commands>
        <Command Name="ClientViewDataConnectionRefreshCommand" />
        <Command Name="ClientSelectInTableValueSetCommand" />
        <Command Name="UpdatedSetTrueValueSetCommand" />
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Command Name="ClientDeleteMessageBoxCommand" Parameter="Yes" />
      </ConditionExpression>
      <Commands>
        <Command Name="ClientDeleteSaveCommand" />
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Command Name="ClientArchiveMessageBoxCommand" Parameter="Yes" />
      </ConditionExpression>
      <Commands>
        <Command Name="ClientArchiveToggleSaveCommand"> </Command>
        <Command Name="ClientViewDataConnectionRefreshCommand" />
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Condition Name="IsArchiveCanEqualCondition" />
      </ConditionExpression>
      <Commands>
        <Command Name="ClientCantDeleteMessageBoxCommand" />
      </Commands>
    </Execution>


  </Executions>

