        </Item>
        <Item>True</Item>
      </Items>
      <DataType Type="BooleanDataType" />
    </Condition>

    <Condition Name="SelectedClientIsArchiveEqualCondition" Type="EqualCondition" Assembly="Conditions">
      <Items>
        <Item>
          <Object Name="ClientDatabaseTable">
            <Property Name="SelectedRowCellValueByColumnName">
              <Parameters>
                <Parameter Name="ColumnName">Archive</Parameter>
              </Parameters>
            </Property>
          </Object>
        </Item>
        <Item>True</Item>
      </Items>
    </Condition>

    <Condition Name="IsArchiveCanEqualCondition" Type="EqualCondition" Assembly="Conditions">
      <Items>
        <Item>
          <Command Name="ClientDeleteSaveCommand" />
        </Item>
        <Item>False</Item>
      </Items>
