        <Parameter Name="MaterialTitle">
          <Object Name="MaterialComboBox">
            <Property Name="Text" />
          </Object>
        </Parameter>
      </Parameters>
    </Command>

    <Command Name="MaterialEditFormShowCommand" Type="FormShowCommand" Assembly="Commands">
