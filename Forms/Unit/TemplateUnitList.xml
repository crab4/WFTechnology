            </Row>
            <Row>
              <Item>True</Item>
              <Item>Архивные</Item>
            </Row>
          </Structure>
        </ValueList>
        <Value>
          <Switch>
            <Case>
              <When>
                <Parameter Name="SelectionMode" />
              </When>
              <Then>
                <Parameter Name="UnitId" />
              </Then>
