              </Switch>
            </Item>
            <Item>
              <Object Name="ContentPanel">
                <Property Name="Top" />
              </Object>
            </Item>
          </Items>
        </Calculate>
      </Height>
      <Width>
        <Form>
          <Property Name="Width" />
        </Form>
      </Width>
