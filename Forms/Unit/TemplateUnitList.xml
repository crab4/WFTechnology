            <Case>False</Case>
          </Switch>
        </Value>
      </MyObject>
    </MyObject>

    <MyObject Name="ContentPanel" Type="Panel" Assembly="BaseControls">
      <Top>
        <Object Name="HeadPanel">
          <Property Name="Bottom" />
        </Object>
      </Top>
      <Left>0</Left>
      <Height>
        <Calculate>
          <Expression>{0} - {1}</Expression>
          <Items>
            <Item>
              <Switch>
                <Case>
                  <When>
                    <Parameter Name="SelectionMode" />
                  </When>
                  <Then>
                    <Object Name="FootSeparatePanel">
