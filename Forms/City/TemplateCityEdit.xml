<?xml version="1.0"?>
<Form Name="TemplateCityEditForm" Width="350" Height="150" BackColor="ThemeBackgroundColor" StartPosition="CenterScreen" FontStyle="ThemeFontStyle" ForeColor="ThemeForeColor" ValidationType="Flat" FlatColor="ThemeFlatColor" FlatWidth="2" StatusBar="True" MaximizeBox="True" FormBorderStyle="Sizable">
  <Parameters>
    <Parameter Name="Title">
      <Switch>
        <Case>
          <When>
            <Parameter Name="Edit" />
          </When>
          <Then>Редактирование города</Then>
        </Case>
        <Case>Добавление города</Case>
      </Switch>
    </Parameter>
    <Parameter Name="CityTitle" />
    <Parameter Name="Archive" />
    <Parameter Name="Updated">False</Parameter>
    <Parameter Name="Edit">False</Parameter>
  </Parameters>

  <Appearance>
    <Colors>
      <Color Name="ThemeForeColor" Red="0" Green="0" Blue="0" Alpha="255" />
      <Color Name="ThemeBackgroundColor" Red="255" Green="255" Blue="255" Alpha="255" />
      <Color Name="ThemeFlatColor" Red="255" Green="0" Blue="0" Alpha="255" />
      <Color Name="ThemeSeparateBackgroundColor" Red="225" Green="225" Blue="225" Alpha="255" />

      <Color Name="HeadBackgroundColor" Red="221" Green="232" Blue="246" Alpha="255" />
      <Color Name="HeadForeColor" Red="70" Green="70" Blue="70" Alpha="255" />

      <Color Name="LabelForeColor" Red="100" Green="100" Blue="100" Alpha="255" />
      <Color Name="TableBackgroundColor" Red="200" Green="200" Blue="200" Alpha="255" />
      <Color Name="TableArchiveColor" Red="230" Green="230" Blue="230" Alpha="255" />

      <!-- Стили кнопок -->
      <Color Name="ButtonFlatBorderColor" Red="225" Green="225" Blue="225" Alpha="255" />
      <Color Name="ButtonFlatMouseDownBackColor" Red="201" Green="219" Blue="241" Alpha="255" />
      <Color Name="ButtonFlatMouseOverBackColor" Red="228" Green="237" Blue="248" Alpha="255" />
    </Colors>

    <FontStyles>
      <FontStyle Name="ThemeFontStyle" Font="Segoe UI" Size="9" />
      <FontStyle Name="HeadFontStyle" Font="Segoe UI" Size="15" />
      <FontStyle Name="LabelFontStyle" Font="Segoe UI" Size="9" Italic="True" />
      <FontStyle Name="ButtonFontStyle" Font="Segoe UI" Size="10" />
    </FontStyles>
  </Appearance>

  <DataConnections> </DataConnections>

  <Conditions>
    <Condition Name="FormClosingCondition" Type="FormClosingCondition" Assembly="Conditions" />

    <Condition Name="CityTitleIsNullOrEmptyCondition" Type="IsNullOrEmptyCondition" Assembly="Conditions">
      <Items>
        <Item>
          <Object Name="CityTitleTextBox" />
        </Item>
      </Items>
    </Condition>

    <Condition Name="CheckingFiredFalseEqualCondition" Type="EqualCondition" Assembly="Conditions">
      <Items>
        <Item>
          <Form>
            <Property Name="CheckingFired" />
          </Form>
        </Item>
        <Item>False</Item>
      </Items>
    </Condition>

    <Condition Name="FormChangedTrueEqualCondition" Type="EqualCondition" Assembly="Conditions">
      <Items>
        <Item>
          <Form>
            <Property Name="FormChanged" />
          </Form>
        </Item>
        <Item>True</Item>
      </Items>
    </Condition>

    <Condition Name="SaveOnCloseYesEqualCondition" Type="EqualCondition" Assembly="Conditions">
      <Items>
        <Item>
          <Command Name="SaveOnCloseMessageBoxCommand" />
        </Item>
        <Item>Yes</Item>
      </Items>
    </Condition>

    <Condition Name="SaveOnCloseNoEqualCondition" Type="EqualCondition" Assembly="Conditions">
      <Items>
        <Item>
          <Command Name="SaveOnCloseMessageBoxCommand" />
        </Item>
        <Item>No</Item>
      </Items>
    </Condition>

    <Condition Name="CloseOnCloseYesEqualCondition" Type="EqualCondition" Assembly="Conditions">
      <Items>
        <Item>
          <Command Name="CloseOnCloseMessageBoxCommand" />
        </Item>
        <Item>Yes</Item>
      </Items>
    </Condition>
  </Conditions>

  <Commands>
    <Command Name="FormCloseCommand" Type="FormCloseCommand" Assembly="Commands" />
    <Command Name="CityTitleValueSetCommand" Type="ValueSetCommand" Assembly="Commands">
      <Parameter Name="CityTitle">
        <Object Name="CityTitleTextBox" />
      </Parameter>
    </Command>
    <Command Name="SaveSequentialCommand" Type="SequentialCommand" Assembly="Commands">
      <Commands>
        <Command Name="CityTitleValueSetCommand" />
        <Command Name="UpdatedTrueValueSetCommand" />
        <Command Name="FormCloseCommand" />
      </Commands>
    </Command>
    <Command Name="UpdatedTrueValueSetCommand" Type="ValueSetCommand" Assembly="Commands">
      <Parameter Name="Updated">True</Parameter>
    </Command>

    <Command Name="SaveOnCloseMessageBoxCommand" Type="MessageBoxCommand" Assembly="Commands">
      <Caption>Сохранение</Caption>
      <Text>Форма содержит несохранённые данные.\rСохранить их перед закрытием?</Text>
      <Icon Type="Question" />
      <Buttons Type="YesNoCancel" />
    </Command>

    <Command Name="CloseOnCloseMessageBoxCommand" Type="MessageBoxCommand" Assembly="Commands">
      <Caption>Закрытие</Caption>
      <Text>При закрытии все несохраненные изменения будет утеряны.\rВсё равно закрыть форму?</Text>
      <Icon Type="Question" />
      <Buttons Type="YesNo" />
    </Command>
  </Commands>

  <Checkings>
    <Checking>
      <Object Name="CityTitleTextBox" />
      <ConditionExpression>
        <Condition Name="CityTitleIsNullOrEmptyCondition" />
      </ConditionExpression>
      <AsteriskHint>Заполните это поле.</AsteriskHint>
    </Checking>
  </Checkings>

  <Executions>
    <Execution>
      <ConditionExpression>
        <And>
          <Condition Name="FormClosingCondition" />
          <Condition Name="FormChangedTrueEqualCondition" />
        </And>
      </ConditionExpression>
      <Commands>
        <If>
          <When>
            <Condition Name="CheckingFiredFalseEqualCondition" />
          </When>
          <Then>
            <Command Name="SaveOnCloseMessageBoxCommand" />
          </Then>
          <Else>
            <Command Name="CloseOnCloseMessageBoxCommand" />
          </Else>
        </If>
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Condition Name="SaveOnCloseYesEqualCondition" />
      </ConditionExpression>
      <Commands>
        <Command Name="SaveSequentialCommand" />
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Or>
          <And>
            <Condition Name="FormClosingCondition" />
            <Not>
              <Condition Name="FormChangedTrueEqualCondition" />
            </Not>
          </And>
          <Condition Name="SaveOnCloseNoEqualCondition" />
          <Condition Name="CloseOnCloseYesEqualCondition" />
        </Or>
      </ConditionExpression>
      <Commands>
        <Command Name="FormCloseCommand" />
      </Commands>
    </Execution>
  </Executions>

  <MyObjects>
    <MyObject Name="HeadPanel" Type="Panel" Assembly="BaseControls">
      <Top>0</Top>
      <Left>0</Left>
      <Height>50</Height>
      <Width>
        <Form>
          <Property Name="Width" />
        </Form>
      </Width>
      <BackColor>HeadBackgroundColor</BackColor>

      <MyObject Name="HeadLabel" Type="Label" Assembly="BaseControls" ChangeForm="False">
        <Top>0</Top>
        <Left>10</Left>
        <Height>
          <Object Name="HeadPanel">
            <Property Name="Height" />
          </Object>
        </Height>
        <Width>
          <Calculate>
            <Expression>{0} - {1} - 10</Expression>
            <Items>
              <Item>
                <Object Name="HeadPanel">
                  <Property Name="Width" />
                </Object>
              </Item>
              <Item>
                <Object Name="HeadLabel">
                  <Property Name="Left" />
                </Object>
              </Item>
            </Items>
          </Calculate>
        </Width>
        <FontStyle>HeadFontStyle</FontStyle>
        <ForeColor>HeadForeColor</ForeColor>
        <TextAlign>MiddleLeft</TextAlign>
        <Text>
          <Parameter Name="Title" />
        </Text>
      </MyObject>
    </MyObject>

    <MyObject Name="ContentPanel" Type="Panel" Assembly="BaseControls">
      <Top>
        <Object Name="HeadPanel">
          <Property Name="Bottom" />
        </Object>
      </Top>
      <Left>0</Left>
      <Height>
        <Calculate>
          <Expression>{0} - {1} - {2} - {3}</Expression>
          <Items>
            <Item>
              <Form>
                <Property Name="Height" />
              </Form>
            </Item>
            <Item>
              <Object Name="ContentPanel">
                <Property Name="Top" />
              </Object>
            </Item>
            <Item>
              <Object Name="FootSeparatePanel">
                <Property Name="Height" />
              </Object>
            </Item>
            <Item>
              <Object Name="FootPanel">
                <Property Name="Height" />
              </Object>
            </Item>
          </Items>
        </Calculate>
      </Height>
      <Width>
        <Form>
          <Property Name="Width" />
        </Form>
      </Width>
      <TabIndex>1</TabIndex>
      <BackColor>ThemeBackgroundColor</BackColor>

      <!-- Insert your content-->
      <MyObject Name="TitleLabel" Type="Label" Assembly="BaseControls">
        <Top>5</Top>
        <Left>10</Left>
        <Height>20</Height>
        <Width>
          <Calculate>
            <Expression>{0} - {1} * 2</Expression>
            <Items>
              <Item>
                <Object Name="ContentPanel">
                  <Property Name="Width" />
                </Object>
              </Item>
              <Item>
                <Object Name="TitleLabel">
                  <Property Name="Left" />
                </Object>
              </Item>
            </Items>
          </Calculate>
        </Width>
        <TextAlign>MiddleLeft</TextAlign>
        <FontStyle>LabelFontStyle</FontStyle>
        <ForeColor>LabelForeColor</ForeColor>
        <Text>Наименование</Text>
      </MyObject>
      <MyObject Name="CityTitleTextBox" Type="TextBox" Assembly="BaseControls">
        <ReadOnly><Parameter Name="Archive" />
        </ReadOnly>
        <Top>
          <Object Name="TitleLabel">
            <Property Name="Bottom" />
          </Object>
        </Top>
        <Left>
          <Object Name="TitleLabel">
            <Property Name="Left" />
          </Object>
        </Left>
        <Width>
          <Object Name="TitleLabel">
            <Property Name="Width" />
          </Object>
        </Width>
        <Text>
          <Parameter Name="CityTitle" />
        </Text>
      </MyObject>

    </MyObject>

    <MyObject Name="FootSeparatePanel" Type="Panel" Assembly="BaseControls">
      <Top>
        <Object Name="ContentPanel">
          <Property Name="Bottom" />
        </Object>
      </Top>
      <Left>5</Left>
      <Height>1</Height>
      <Width>
        <Calculate>
          <Expression>{0} - 10</Expression>
          <Items>
            <Item>
              <Form>
                <Property Name="Width" />
              </Form>
            </Item>
          </Items>
        </Calculate>
      </Width>
      <BackColor>ThemeSeparateBackgroundColor</BackColor>
    </MyObject>

    <MyObject Name="FootPanel" Type="Panel" Assembly="BaseControls">
      <Top>
        <Object Name="FootSeparatePanel">
          <Property Name="Bottom" />
        </Object>
      </Top>
      <Left>0</Left>
      <Height>40</Height>
      <Width>
        <Form>
          <Property Name="Width" />
        </Form>
      </Width>
      <TabIndex>2</TabIndex>
      <BackColor>ThemeBackgroundColor</BackColor>

      <MyObject Name="SaveButton" Type="Button" Assembly="BaseControls">
        <Top>5</Top>
        <Right>
          <Formula>
            <Minus DataType="IntegerDataType">
              <Item>
                <Object Name="FootPanel">
                  <Property Name="Width" />
                </Object>
              </Item>
              <Item>5</Item>
            </Minus>
          </Formula>
        </Right>
        <Height>30</Height>
        <Width>200</Width>
        <TextAlign>MiddleCenter</TextAlign>
        <FontStyle>ButtonFontStyle</FontStyle>
        <ImageAlign>MiddleLeft</ImageAlign>
        <Image>..\Images\24x24\content-save.png</Image>
        <FlatStyle>Flat</FlatStyle>
        <FlatBorderSize>1</FlatBorderSize>
        <FlatBorderColor>ButtonFlatBorderColor</FlatBorderColor>
        <FlatMouseDownBackColor>ButtonFlatMouseDownBackColor</FlatMouseDownBackColor>
        <FlatMouseOverBackColor>ButtonFlatMouseOverBackColor</FlatMouseOverBackColor>
        <Text>Сохранить</Text>
        <TabIndex>1</TabIndex>
        <Enabled>
          <Condition Name="CheckingFiredFalseEqualCondition" />
        </Enabled>
        <DisabledMode>True</DisabledMode>
        <DisabledText>Для сохранения требуется дать городу название</DisabledText>
        <Commands>
          <Command Name="SaveSequentialCommand" />
        </Commands>
      </MyObject>
    </MyObject>
  </MyObjects>
</Form>