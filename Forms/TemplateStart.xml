<?xml version="1.0"?>
<Form Name="TemplateOrderForm" Width="1000" Height="600" BackColor="ThemeBackgroundColor" StartPosition="CenterScreen" FontStyle="ThemeFontStyle" ForeColor="ThemeForeColor" ValidationType="Flat" FlatColor="ThemeFlatColor" FlatWidth="2" StatusBar="True" MaximizeBox="True" FormBorderStyle="Sizable">
  <Parameters>
    <Parameter Name="Title">Заказы</Parameter>
  </Parameters>

  <Appearance>
    <Colors>
      <Color Name="ThemeForeColor" Red="0" Green="0" Blue="0" Alpha="255" />
      <Color Name="ThemeBackgroundColor" Red="255" Green="255" Blue="255" Alpha="255" />
      <Color Name="ThemeFlatColor" Red="255" Green="0" Blue="0" Alpha="255" />
      <Color Name="ThemeSeparateBackgroundColor" Red="225" Green="225" Blue="225" Alpha="255" />

      <Color Name="HeadBackgroundColor" Red="221" Green="232" Blue="246" Alpha="255" />
      <Color Name="HeadForeColor" Red="70" Green="70" Blue="70" Alpha="255" />

      <Color Name="LabelForeColor" Red="100" Green="100" Blue="100" Alpha="255" />
      <Color Name="TableBackgroundColor" Red="200" Green="200" Blue="200" Alpha="255" />
      <Color Name="TableArchiveColor" Red="230" Green="230" Blue="230" Alpha="255" />

      <!-- Стили кнопок -->
      <Color Name="ButtonFlatBorderColor" Red="225" Green="225" Blue="225" Alpha="255" />
      <Color Name="ButtonFlatMouseDownBackColor" Red="201" Green="219" Blue="241" Alpha="255" />
      <Color Name="ButtonFlatMouseOverBackColor" Red="228" Green="237" Blue="248" Alpha="255" />
    </Colors>

    <FontStyles>
      <FontStyle Name="ThemeFontStyle" Font="Segoe UI" Size="9" />
      <FontStyle Name="HeadFontStyle" Font="Segoe UI" Size="15" />
      <FontStyle Name="LabelFontStyle" Font="Segoe UI" Size="9" Italic="True" />
      <FontStyle Name="ButtonFontStyle" Font="Segoe UI" Size="10" />
    </FontStyles>
  </Appearance>

  <DataConnections>
    <DataConnection Name="OrderSelectPrimaryGetDataConnection" Type="PrimaryGetDataConnection" Assembly="DataConnections">
      <SqlQuery Name="OrderSelectSqlQuery" Type="Select">
        <Workflow Name="Template" />
        <Fields>
          <Field Name="OrderId" />
          <Field Name="ClientId" />
          <Field Name="OrderNumber" />
          <Field Name="OrderDate" />
          <Field Name="CityId" />
        </Fields>
      </SqlQuery>
    </DataConnection>

    <DataConnection Name="OrderDeleteSetDataConnection" Type="SetDataConnection" Assembly="DataConnections">
      <Workflow Name="Template" />
      <Parameters>
        <Parameter NativeName="OrderId">
          <Value>
            <Object Name="OrderDatabaseTable">
              <Property Name="SelectedRowCellValueByColumnName">
                <Parameters>
                  <Parameter Name="ColumnName">OrderId</Parameter>
                </Parameters>
              </Property>
            </Object>
          </Value>
        </Parameter>
      </Parameters>
      <SqlQueries>
        <SqlQuery Name="OrderDeleteSqlQuery" Type="Delete" />
      </SqlQueries>
    </DataConnection>

    <DataConnection Name="ClientPrimaryGetDataConnection" Type="PrimaryGetDataConnection" Assembly="DataConnections">
      <SqlQuery Name="ClientSimpleSqlQuery" Type="Select">
        <Workflow Name="Template" />
        <Fields>
          <Field Name="ClientId" />
          <Field Name="ClientTitle" />
        </Fields>
      </SqlQuery>
    </DataConnection>

    <DataConnection Name="CityPrimaryGetDataConnection" Type="PrimaryGetDataConnection" Assembly="DataConnections">
      <SqlQuery Name="CitySimpleSqlQuery" Type="Select">
        <Workflow Name="Template" />
        <Fields>
          <Field Name="CityId" />
          <Field Name="CityTitle" />
        </Fields>
      </SqlQuery>
    </DataConnection>
  </DataConnections>

  <Conditions>
    <Condition Name="FormClosingCondition" Type="FormClosingCondition" Assembly="Conditions" />

    <Condition Name="OrderSelectedGreaterCondition" Type="GreaterCondition" Assembly="Conditions">
      <Items>
        <Item>
          <Object Name="OrderDatabaseTable">
            <Property Name="SelectedRowsCount" />
          </Object>
        </Item>
        <Item>0</Item>
      </Items>
      <DataType Type="IntegerDataType" />
    </Condition>

    <Condition Name="OrderDatabaseTableCellDoubleClickCondition" Type="CellDoubleClickCondition" Assembly="Conditions">
      <Table Name="OrderDatabaseTable" />
    </Condition>
  </Conditions>

  <Commands>
    <Command Name="FormCloseCommand" Type="FormCloseCommand" Assembly="Commands" />

    <Command Name="OrderDeleteSaveCommand" Type="SaveCommand" Assembly="Commands">
      <DataConnections>
        <DataConnection Name="OrderDeleteSetDataConnection" />
      </DataConnections>
    </Command>

    <Command Name="OrderEditFormShowCommand" Type="FormShowCommand" Assembly="Commands">
      <Xml Type="Path">Order\TemplateOrderEdit.xml</Xml>
      <Show Type="None" />
      <Parameters>
        <Parameter Name="Edit">
          <Input Name="Edit">False</Input>
        </Parameter>
        <Parameter Name="OrderId">
          <Input Name="OrderId" />
        </Parameter>
      </Parameters>
    </Command>

    <Command Name="OrderDatabaseTableSelectRowValueSetCommand" Type="ValueSetCommand" Assembly="Commands">
      <Object Name="OrderDatabaseTable">
        <Property Name="SelectRowByFieldValue">
          <Parameters>
            <Parameter Name="ColumnName">OrderId</Parameter>
            <Parameter Name="Value">
              <Command Name="OrderEditFormShowCommand" Parameter="OrderId" />
            </Parameter>
          </Parameters>
        </Property>
      </Object>
    </Command>

    <Command Name="OrderEditSequentialCommand" Type="SequentialCommand" Assembly="Commands">
      <Commands>
        <Command Name="OrderEditFormShowCommand">
          <Input Name="Edit">True</Input>
          <Input Name="OrderId">
            <Object Name="OrderDatabaseTable">
              <Property Name="SelectedRowCellValueByColumnName">
                <Parameters>
                  <Parameter Name="ColumnName">OrderId</Parameter>
                </Parameters>
              </Property>
            </Object>
          </Input>
        </Command>
      </Commands>
    </Command>

    <Command Name="TestMessageBoxCommand" Type="MessageBoxCommand" Assembly="Commands">
      <Caption>Test</Caption>
      <Text>
        <Object Name="OrderDatabaseTable">
          <Property Name="SelectedRowCellValueByColumnName">
            <Parameters>
              <Parameter Name="ColumnName">OrderId</Parameter>
            </Parameters>
          </Property>
        </Object>
      </Text>
      <Icon Type="Information" />
      <Buttons Type="Ok" />
    </Command>

    <Command Name="OrderDataConnectionRefreshCommand" Type="DataConnectionRefreshCommand" Assembly="Commands">
      <DataConnections>
        <DataConnection Name="OrderSelectPrimaryGetDataConnection" Packet="True" />
      </DataConnections>
    </Command>

    <Command Name="CityDataConnectionRefreshCommand" Type="DataConnectionRefreshCommand" Assembly="Commands">
      <DataConnections>
        <DataConnection Name="CityPrimaryGetDataConnection" Packet="True" />
      </DataConnections>
    </Command>

    <Command Name="ClientDataConnectionRefreshCommand" Type="DataConnectionRefreshCommand" Assembly="Commands">
      <DataConnections>
        <DataConnection Name="ClientPrimaryGetDataConnection" Packet="True" />
      </DataConnections>
    </Command>

    <Command Name="ClientFormShowCommand" Type="FormShowCommand" Assembly="Commands">
      <Xml Type="Path">Client\TemplateClientList.xml</Xml>
      <Show Type="None" />
    </Command>

    <Command Name="CityFormShowCommand" Type="FormShowCommand" Assembly="Commands">
      <Xml Type="Path">City\TemplateCityList.xml</Xml>
      <Show Type="None" />
    </Command>
  </Commands>

  <Executions>
    <Execution>
      <ConditionExpression>
        <Condition Name="FormClosingCondition" />
      </ConditionExpression>
      <Commands>
        <Command Name="FormCloseCommand" />
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Command Name="OrderEditFormShowCommand" Parameter="Updated" />
      </ConditionExpression>
      <Commands>
        <Command Name="OrderDataConnectionRefreshCommand" />
        <Command Name="OrderDatabaseTableSelectRowValueSetCommand" />
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Condition Name="OrderDatabaseTableCellDoubleClickCondition" />
      </ConditionExpression>
      <Commands>
        <Command Name="OrderEditSequentialCommand" />
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Command Name="CityFormShowCommand" Parameter="Updated" />
      </ConditionExpression>
      <Commands>
        <Command Name="CityDataConnectionRefreshCommand" />
      </Commands>
    </Execution>

    <Execution>
      <ConditionExpression>
        <Command Name="ClientFormShowCommand" Parameter="Updated" />
      </ConditionExpression>
      <Commands>
        <Command Name="ClientDataConnectionRefreshCommand" />
      </Commands>
    </Execution>
  </Executions>

  <MainMenu>
    <MenuItem Name="FileMenuItem" Type="MenuItem">
      <Title>Файл</Title>
      <Items>
        <MenuItem Name="FileRefreshMenuItem" Type="MenuItem">
          <Title>Обновить</Title>
          <Command Name="OrderDataConnectionRefreshCommand" />
        </MenuItem>

        <MenuItem Name="FileSeparator" Type="Separator" />

        <MenuItem Name="FileExitMenuItem" Type="MenuItem">
          <Title>Выход</Title>
          <Command Name="FormCloseCommand" />
        </MenuItem>
      </Items>
    </MenuItem>

    <MenuItem Name="ListMenuItem" Type="MenuItem">
      <Title>Списки</Title>
      <Items>
        <MenuItem Name="CityMenuItem" Type="MenuItem">
          <Title>Города...</Title>
          <Command Name="CityFormShowCommand" />
        </MenuItem>

        <MenuItem Name="ClientMenuItem" Type="MenuItem">
          <Title>Клиенты...</Title>
          <Command Name="ClientFormShowCommand" />
        </MenuItem>
      </Items>
    </MenuItem>
  </MainMenu>

  <MyObjects>
    <MyObject Name="HeadPanel" Type="Panel" Assembly="BaseControls">
      <Top>24</Top>
      <Left>0</Left>
      <Height>50</Height>
      <Width>
        <Form>
          <Property Name="Width" />
        </Form>
      </Width>
      <BackColor>HeadBackgroundColor</BackColor>

      <MyObject Name="HeadLabel" Type="Label" Assembly="BaseControls" ChangeForm="False">
        <Top>0</Top>
        <Left>10</Left>
        <Height>
          <Object Name="HeadPanel">
            <Property Name="Height" />
          </Object>
        </Height>
        <Width>
          <Calculate>
            <Expression>{0} - {1} - 10</Expression>
            <Items>
              <Item>
                <Object Name="HeadPanel">
                  <Property Name="Width" />
                </Object>
              </Item>
              <Item>
                <Object Name="HeadLabel">
                  <Property Name="Left" />
                </Object>
              </Item>
            </Items>
          </Calculate>
        </Width>
        <FontStyle>HeadFontStyle</FontStyle>
        <ForeColor>HeadForeColor</ForeColor>
        <TextAlign>MiddleLeft</TextAlign>
        <Text>
          <Parameter Name="Title" />
        </Text>
      </MyObject>
    </MyObject>

    <MyObject Name="ContentPanel" Type="Panel" Assembly="BaseControls">
      <Top>
        <Object Name="HeadPanel">
          <Property Name="Bottom" />
        </Object>
      </Top>
      <Left>0</Left>
      <Height>
        <Calculate>
          <Expression>{0} - {1}</Expression>
          <Items>
            <Item>
              <Form>
                <Property Name="Height" />
              </Form>
            </Item>
            <Item>
              <Object Name="ContentPanel">
                <Property Name="Top" />
              </Object>
            </Item>
          </Items>
        </Calculate>
      </Height>
      <Width>
        <Form>
          <Property Name="Width" />
        </Form>
      </Width>
      <TabIndex>1</TabIndex>
      <BackColor>ThemeBackgroundColor</BackColor>

      <!-- Insert your content-->

      <MyObject Name="OrderDatabaseTable" Type="DatabaseTable" Assembly="ComplexControls">
        <Top>5</Top>
        <Left>10</Left>
        <Height>
          <Calculate>
            <Expression>{0} - 10</Expression>
            <Items>
              <Item>
                <Object Name="ContentPanel">
                  <Property Name="Height" />
                </Object>
              </Item>
            </Items>
          </Calculate>
        </Height>
        <Width>
          <Calculate>
            <Expression>{0} - {1} * 2 - {2} - 5</Expression>
            <Items>
              <Item>
                <Object Name="ContentPanel">
                  <Property Name="Width" />
                </Object>
              </Item>
              <Item>
                <Object Name="OrderDatabaseTable">
                  <Property Name="Left" />
                </Object>
              </Item>
              <Item>
                <Object Name="OrderAddButton">
                  <Property Name="Width" />
                </Object>
              </Item>
            </Items>
          </Calculate>
        </Width>
        <AllowResizeColumns Value="False" />
        <AllowResizeRows Value="False" />
        <AllowInsert>False</AllowInsert>
        <AllowUpdate>False</AllowUpdate>
        <AllowDelete>False</AllowDelete>
        <AutoSizeColumnsMode Value="Fill" />
        <SourceDataConnection Name="OrderSelectPrimaryGetDataConnection" />
        <Columns>
          <Column Name="OrderId" Type="DatabaseTableColumnTextBox" Assembly="DatabaseTableColumnControls">
            <Visible>False</Visible>
          </Column>
          <Column Name="ClientId" Type="DatabaseTableColumnTextBox" Assembly="DatabaseTableColumnControls">
            <Visible>False</Visible>
          </Column>
          <Column Name="CityId" Type="DatabaseTableColumnTextBox" Assembly="DatabaseTableColumnControls">
            <Visible>False</Visible>
          </Column>
          <Column Name="RowNumber" Type="DatabaseTableColumnTextBox" Assembly="DatabaseTableColumnControls">
            <Title>#</Title>
            <Width>40</Width>
            <AutoFill Type="RowNumber" />
            <AutoSizeMode Value="None" />
          </Column>
          <Column Name="OrderNumber" Type="DatabaseTableColumnTextBox" Assembly="DatabaseTableColumnControls">
            <Title>Номер заказа</Title>
            <MinimumWidth>150</MinimumWidth>
            <AutoSizeMode Value="None" />
          </Column>
          <Column Name="OrderDate" Type="DatabaseTableColumnTextBox" Assembly="DatabaseTableColumnControls">
            <Title>Дата и время заказа</Title>
            <Width>150</Width>
            <AutoSizeMode Value="None" />
            <Alignment Value="MiddleCenter" />
            <DataType Type="DateTimeDataType" Format="dd.MM.yyyy HH:mm" />
          </Column>
          <Column Name="CityTitle" Type="DatabaseTableColumnTextBox" Assembly="DatabaseTableColumnControls">
            <Title>Город</Title>
            <Width>150</Width>
            <MinimumWidth>150</MinimumWidth>
            <Substitution SourceColumn="CityId">
              <DataConnection SourceDataConnection="CityPrimaryGetDataConnection">
                <Fields>
                  <Field Name="CityId" />
                  <Field Name="CityTitle" />
                </Fields>
              </DataConnection>
            </Substitution>
          </Column>
          <Column Name="ClientTitle" Type="DatabaseTableColumnTextBox" Assembly="DatabaseTableColumnControls">
            <Title>Клиент</Title>
            <Width>200</Width>
            <MinimumWidth>200</MinimumWidth>
            <Substitution SourceColumn="ClientId">
              <DataConnection SourceDataConnection="ClientPrimaryGetDataConnection">
                <Fields>
                  <Field Name="ClientId" />
                  <Field Name="ClientTitle" />
                </Fields>
              </DataConnection>
            </Substitution>
          </Column>
        </Columns>
      </MyObject>

      <MyObject Name="OrderAddButton" Type="Button" Assembly="BaseControls">
        <Top>
          <Object Name="OrderDatabaseTable">
            <Property Name="Top" />
          </Object>
        </Top>
        <Left>
          <Calculate>
            <Expression>{0} + 5</Expression>
            <Items>
              <Item>
                <Object Name="OrderDatabaseTable">
                  <Property Name="Right" />
                </Object>
              </Item>
            </Items>
          </Calculate>
        </Left>
        <Height>40</Height>
        <Width>40</Width>
        <Hint>Добавить запись...</Hint>
        <BackgroundImage>Images\24x24\plus.png</BackgroundImage>
        <BackgroundImageLayout>Center</BackgroundImageLayout>
        <FlatStyle>Flat</FlatStyle>
        <FlatBorderSize>1</FlatBorderSize>
        <FlatBorderColor>ButtonFlatBorderColor</FlatBorderColor>
        <FlatMouseDownBackColor>ButtonFlatMouseDownBackColor</FlatMouseDownBackColor>
        <FlatMouseOverBackColor>ButtonFlatMouseOverBackColor</FlatMouseOverBackColor>
        <Commands>
          <Command Name="OrderEditFormShowCommand" />
        </Commands>
      </MyObject>

      <MyObject Name="OrderEditButton" Type="Button" Assembly="BaseControls">
        <Top>
          <Calculate>
            <Expression>{0} + 5</Expression>
            <Items>
              <Item>
                <Object Name="OrderAddButton">
                  <Property Name="Bottom" />
                </Object>
              </Item>
            </Items>
          </Calculate>
        </Top>
        <Left>
          <Object Name="OrderAddButton">
            <Property Name="Left" />
          </Object>
        </Left>
        <Height>40</Height>
        <Width>40</Width>
        <Hint>Редактировать запись...</Hint>
        <BackgroundImage>Images\24x24\pencil.png</BackgroundImage>
        <BackgroundImageLayout>Center</BackgroundImageLayout>
        <FlatStyle>Flat</FlatStyle>
        <FlatBorderSize>1</FlatBorderSize>
        <FlatBorderColor>ButtonFlatBorderColor</FlatBorderColor>
        <FlatMouseDownBackColor>ButtonFlatMouseDownBackColor</FlatMouseDownBackColor>
        <FlatMouseOverBackColor>ButtonFlatMouseOverBackColor</FlatMouseOverBackColor>
        <DisabledMode>True</DisabledMode>
        <DisabledText>Требуется выбрать заказ</DisabledText>
        <Enabled>
          <Condition Name="OrderSelectedGreaterCondition" />
        </Enabled>
        <Commands>
          <Command Name="OrderEditSequentialCommand" />
        </Commands>
      </MyObject>

      <MyObject Name="OrderDeleteButton" Type="Button" Assembly="BaseControls">
        <Top>
          <Calculate>
            <Expression>{0} + 5</Expression>
            <Items>
              <Item>
                <Object Name="OrderEditButton">
                  <Property Name="Bottom" />
                </Object>
              </Item>
            </Items>
          </Calculate>
        </Top>
        <Left>
          <Object Name="OrderAddButton">
            <Property Name="Left" />
          </Object>
        </Left>
        <Height>40</Height>
        <Width>40</Width>
        <Hint>Удалить запись...</Hint>
        <BackgroundImage>Images\24x24\delete.png</BackgroundImage>
        <BackgroundImageLayout>Center</BackgroundImageLayout>
        <FlatStyle>Flat</FlatStyle>
        <FlatBorderSize>1</FlatBorderSize>
        <FlatBorderColor>ButtonFlatBorderColor</FlatBorderColor>
        <FlatMouseDownBackColor>ButtonFlatMouseDownBackColor</FlatMouseDownBackColor>
        <FlatMouseOverBackColor>ButtonFlatMouseOverBackColor</FlatMouseOverBackColor>
        <DisabledMode>True</DisabledMode>
        <DisabledText>Требуется выбрать заказ</DisabledText>
        <Enabled>
          <Condition Name="OrderSelectedGreaterCondition" />
        </Enabled>
        <Commands>
          <Command Name="OrderDeleteSaveCommand" />
          <Command Name="OrderDataConnectionRefreshCommand" />
        </Commands>
      </MyObject>

    </MyObject>
  </MyObjects>
</Form>